{
  "ignorePatterns": [
    {
      "pattern": "^#"
    },
    {
      "pattern": "^mailto:"
    },
    {
      "pattern": "localhost"
    },
    {
      "pattern": "127.0.0.1"
    },
    {
      "pattern": "^\\./",
      "comment": "Ignore relative paths for external check"
    },
    {
      "pattern": "^\\.\\./",
      "comment": "Ignore relative paths for external check"
    }
  ],
  "httpHeaders": [
    {
      "urls": ["https://github.com", "https://api.github.com"],
      "headers": {
        "Accept-Encoding": "gzip, deflate, br",
        "User-Agent": "Mozilla/5.0 (compatible; documentation-link-checker)"
      }
    },
    {
      "urls": ["https://docs.payplus.co.il"],
      "headers": {
        "User-Agent": "Mozilla/5.0 (compatible; documentation-link-checker)",
        "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8"
      }
    },
    {
      "urls": ["https://firebase.google.com"],
      "headers": {
        "User-Agent": "Mozilla/5.0 (compatible; documentation-link-checker)"
      }
    }
  ],
  "timeout": "15s",
  "retryOn429": true,
  "retryCount": 2,
  "fallbackRetryDelay": "60s",
  "aliveStatusCodes": [200, 206, 300, 301, 302, 303, 304, 307, 308, 403, 503]
}