{
  "watch": [
    "*.js",
    "routes/",
    "middleware/",
    "services/",
    "models/",
    "controllers/",
    "lib/",
    "config/",
    "scripts/"
  ],
  "ignore": [
    "node_modules/",
    "uploads/",
    "logs/",
    "*.log",
    "*.tmp",
    "*.temp",
    ".env*",
    ".git/",
    "coverage/",
    "dist/",
    "build/",
    "*.md",
    "*.txt",
    "*.jpg",
    "*.jpeg",
    "*.png",
    "*.gif",
    "*.pdf",
    "*.zip",
    "*.tar.gz",
    "package-lock.json",
    "yarn.lock",
    "*.sqlite",
    "*.db",
    ".DS_Store",
    "*.backup",
    "*.bak",
    "test/",
    "*.test.js",
    "*.spec.js"
  ],
  "ext": "js,mjs,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": false,
  "legacyWatch": false,
  "pollingInterval": 100,
  "signal": "SIGTERM"
}