PORT=3000
ENVIRONMENT=production

# Database Configuration
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=ludora_production
DB_USER=ludora_user
DB_PASSWORD=your-secure-password

# PostgreSQL Admin (for database creation)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Frontend URL
FRONTEND_URL=https://your-domain.com
USE_S3=true

# PayPlus Payment Gateway (Israeli Payment Processor)
# Get credentials from: https://www.payplus.co.il/
# Production credentials (live payments)
PAYPLUS_API_KEY=pp_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Your PayPlus Production API Key
PAYPLUS_SECRET_KEY=pp_secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Your PayPlus Production Secret Key
PAYPLUS_PAYMENT_PAGE_UID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx # Your PayPlus Production Payment Page UID

# Staging/Test credentials (test payments)
PAYPLUS_STAGING_API_KEY=pp_api_staging_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Your PayPlus Staging API Key
PAYPLUS_STAGING_SECRET_KEY=pp_secret_staging_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Your PayPlus Staging Secret Key
PAYPLUS_STAGING_PAYMENT_PAGE_UID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx # Your PayPlus Staging Payment Page UID

DEBUG_USER=false # Set to user email to enable debug logs for that user in production (e.g., user@example.com)