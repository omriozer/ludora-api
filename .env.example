PORT=3000
ENVIRONMENT=production

# Database Configuration
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=ludora_production
DB_USER=ludora_user
DB_PASSWORD=your-secure-password

# PostgreSQL Admin (for database creation)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Frontend URL
FRONTEND_URL=https://your-domain.com
USE_S3=true

# PayPlus Payment Gateway (Israeli Payment Processor)
# Get credentials from: https://www.payplus.co.il/
# Environment automatically determined: 'production' uses live PayPlus, others use staging
PAYPLUS_API_KEY=pp_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Your PayPlus API Key
PAYPLUS_SECRET_KEY=pp_secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Your PayPlus Secret Key
PAYPLUS_PAYMENT_PAGE_UID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx # Your PayPlus Payment Page UID