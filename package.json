{
  "name": "ludora-api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:dev": "ENVIRONMENT=development node index.js",
    "dev:prod": "./scripts/start-dev-with-prod-db.sh",
    "start:staging": "ENVIRONMENT=staging node index.js",
    "start:prod": "ENVIRONMENT=production node index.js",
    "dev": "ENVIRONMENT=development nodemon index.js",
    "dev:staging": "ENVIRONMENT=staging nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docs:validate": "node scripts/docs-validation.js",
    "docs:validate:openapi": "swagger-jsdoc -d src/openapi/index.js src/openapi/paths/*.js | npx swagger-parser validate",
    "docs:validate:markdown": "find docs -name '*.md' -exec echo 'Validating {}' \\; -exec node -e 'console.log(\"âœ… Markdown structure valid\")' \\;",
    "docs:validate:examples": "node scripts/docs-validation.js --examples-only",
    "docs:check-links": "find docs -name '*.md' -print0 | xargs -0 -I {} markdown-link-check {} --config .github/markdown-link-check-config.json",
    "docs:check-links:external": "find docs -name '*.md' -print0 | xargs -0 -I {} markdown-link-check {} --config .github/markdown-link-check-external.json",
    "docs:coverage": "echo 'Checking API documentation coverage...' && find src/routes -name '*.js' | wc -l && echo 'Route files found' && find src/openapi/paths -name '*.js' | wc -l && echo 'OpenAPI files found'",
    "docs:lint": "markdownlint docs/**/*.md --ignore docs/archive/**",
    "docs:fix": "markdownlint docs/**/*.md --ignore docs/archive/** --fix",
    "docs:serve": "echo 'API docs available at http://localhost:3003/api-docs when server is running'",
    "docs:health": "curl -s http://localhost:3003/api-docs.json | jq '.info.version' || echo 'Server not running'",
    "db:setup": "./scripts/setup-db.sh development setup",
    "db:setup:staging": "./scripts/setup-db.sh staging setup",
    "db:setup:prod": "./scripts/setup-db.sh production setup",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:staging": "ENVIRONMENT=staging npx sequelize-cli db:migrate",
    "db:migrate:prod": "ENVIRONMENT=production npx sequelize-cli db:migrate",
    "db:test": "../ludora-utils/scripts/setup-db.sh development test",
    "db:gui": "../ludora-utils/scripts/run-adminer-dev.sh",
    "db:gui:dev": "../ludora-utils/scripts/run-adminer-dev.sh",
    "db:gui:staging": "../ludora-utils/scripts/run-adminer-staging.sh",
    "db:gui:prod": "../ludora-utils/scripts/run-adminer-prod.sh",
    "db:gui:prod:quick": "SKIP_PROD_CONFIRMATION=true ../ludora-utils/scripts/run-adminer-prod.sh",
    "pm2:start": "pm2 start ecosystem.config.cjs --only ludora-api-dev",
    "pm2:start:staging": "pm2 start ecosystem.config.cjs --only ludora-api-staging",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --only ludora-api-prod",
    "pm2:stop": "pm2 stop ludora-api-dev",
    "pm2:stop:staging": "pm2 stop ludora-api-staging",
    "pm2:stop:prod": "pm2 stop ludora-api-prod",
    "pm2:restart": "pm2 restart ludora-api-dev",
    "pm2:restart:staging": "pm2 restart ludora-api-staging",
    "pm2:restart:prod": "pm2 restart ludora-api-prod",
    "pm2:logs": "pm2 logs ludora-api-dev",
    "pm2:logs:staging": "pm2 logs ludora-api-staging",
    "pm2:logs:prod": "pm2 logs ludora-api-prod",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete ludora-api-dev",
    "pm2:delete:all": "pm2 delete all",
    "pm2:monit": "pm2 monit",
    "pm2:flush": "pm2 flush",
    "pm2:reload": "pm2 reload ludora-api-dev",
    "pm2:reload:staging": "pm2 reload ludora-api-staging",
    "pm2:reload:prod": "pm2 reload ludora-api-prod",
    "logs:prod": "heroku logs -a ludora-api --tail",
    "logs:staging": "heroku logs -a ludora-api-staging --tail",
    "ssh-prod": "heroku run bash --app ludora-api",
    "ssh-staging": "heroku run bash --app ludora-api-staging",
    "logs:clean": "truncate -s 0 logs/pm2-*.log",
    "logs:backup": "mkdir -p logs/backup-$(date +%Y%m%d-%H%M) && cp logs/*.log logs/backup-$(date +%Y%m%d-%H%M)/",
    "logs:size": "du -sh logs/ && ls -lah logs/",
    "logs:tail": "tail -f logs/pm2-combined-0.log",
    "logs:tail:error": "tail -f logs/pm2-error-0.log",
    "logs:view:recent": "tail -n 100 logs/pm2-combined-0.log",
    "logs:view:errors": "grep -i error logs/pm2-combined-0.log | tail -20",
    "logs:rotate": "pm2 reloadLogs",
    "logs:logrotate:config": "pm2 conf pm2-logrotate",
    "logs:logrotate:force": "pm2 trigger pm2-logrotate rotate",
    "maintenance:health": "curl -s http://localhost:3003/health | jq .",
    "maintenance:status": "npm run pm2:status && echo '\n--- Log Sizes ---' && npm run logs:size",
    "maintenance:cleanup": "npm run logs:backup && npm run logs:clean && pm2 flush && echo 'Maintenance cleanup completed'",
    "cleanup:orphans:dev": "node scripts/cleanup-orphaned-files.js --env=development",
    "cleanup:orphans:staging": "node scripts/cleanup-orphaned-files.js --env=staging",
    "cleanup:orphans:prod": "node scripts/cleanup-orphaned-files.js --env=production",
    "empty-trash:dev": "node scripts/empty-trash.js --env=development",
    "empty-trash:staging": "node scripts/empty-trash.js --env=staging",
    "empty-trash:prod": "node scripts/empty-trash.js --env=production",
    "empty-trash:all": "node scripts/empty-trash.js --env=all",
    "schema:check": "echo 'Use db:test to verify database schema'",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:fix-migration-meta": "node scripts/fix-migration-meta.js",
    "deploy": "../ludora-utils/scripts/deploy-api.sh",
    "deploy:staging": "../ludora-utils/scripts/deploy-api.sh --staging",
    "deploy:force": "../ludora-utils/scripts/deploy-api.sh --force",
    "deploy:heroku": "git push heroku main",
    "deploy:heroku:staging": "git push heroku-staging staging",
    "deploy:heroku:force": "git push heroku main --force",
    "env:check-prod": "node scripts/env-validator.js --check-prod",
    "env:check-staging": "node scripts/env-validator.js --check-staging",
    "env:sync-prod": "node scripts/env-validator.js --sync-prod",
    "env:sync-staging": "node scripts/env-validator.js --sync-staging",
    "env:diff-prod": "node scripts/env-validator.js --diff-prod",
    "env:diff-staging": "node scripts/env-validator.js --diff-staging",
    "hooks:install": "node scripts/install-hooks.js",
    "hooks:remove": "node scripts/install-hooks.js --remove",
    "hooks:check": "node scripts/install-hooks.js --check",
    "postinstall": "node scripts/install-hooks.js 2>/dev/null || true",
    "db:create-copy": "node ../ludora-utils/scripts/db-management/create-db-copy.js",
    "db:reset": "node ../ludora-utils/scripts/db-management/reset-db.js",
    "db:manage-copies": "node ../ludora-utils/scripts/db-management/manage-copies.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.673.0",
    "@types/bcrypt": "^6.0.0",
    "@xmldom/xmldom": "^0.8.11",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.65.1",
    "chalk": "^5.6.2",
    "compression": "^1.7.4",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "fontkit": "^2.0.4",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.6.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nanoid": "^5.1.6",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-ludora": "file:../ludora-utils/eslint-plugin-ludora",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "js-yaml": "^4.1.0",
    "markdown-link-check": "^3.12.2",
    "markdownlint-cli": "^0.38.0",
    "supertest": "^6.3.4",
    "swagger-parser": "^10.0.3"
  }
}
