{
  "name": "ludora-api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:dev": "ENVIRONMENT=development node index.js",
    "dev:prod": "./scripts/start-dev-with-prod-db.sh",
    "start:staging": "ENVIRONMENT=staging node index.js",
    "start:prod": "ENVIRONMENT=production node index.js",
    "dev": "ENVIRONMENT=development nodemon index.js",
    "dev:staging": "ENVIRONMENT=staging nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "./scripts/setup-db.sh development setup",
    "db:setup:staging": "./scripts/setup-db.sh staging setup",
    "db:setup:prod": "./scripts/setup-db.sh production setup",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:staging": "ENVIRONMENT=staging npx sequelize-cli db:migrate",
    "db:migrate:prod": "ENVIRONMENT=production npx sequelize-cli db:migrate",
    "db:test": "../ludora-utils/scripts/setup-db.sh development test",
    "db:gui": "../ludora-utils/scripts/run-adminer-dev.sh",
    "db:gui:dev": "../ludora-utils/scripts/run-adminer-dev.sh",
    "db:gui:staging": "../ludora-utils/scripts/run-adminer-staging.sh",
    "db:gui:prod": "../ludora-utils/scripts/run-adminer-prod.sh",
    "db:gui:prod:quick": "SKIP_PROD_CONFIRMATION=true ../ludora-utils/scripts/run-adminer-prod.sh",
    "pm2:start": "pm2 start ecosystem.config.cjs --only ludora-api-dev",
    "pm2:start:staging": "pm2 start ecosystem.config.cjs --only ludora-api-staging",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --only ludora-api-prod",
    "pm2:stop": "pm2 stop ludora-api-dev",
    "pm2:stop:staging": "pm2 stop ludora-api-staging",
    "pm2:stop:prod": "pm2 stop ludora-api-prod",
    "pm2:restart": "pm2 restart ludora-api-dev",
    "pm2:restart:staging": "pm2 restart ludora-api-staging",
    "pm2:restart:prod": "pm2 restart ludora-api-prod",
    "pm2:logs": "pm2 logs ludora-api-dev",
    "pm2:logs:staging": "pm2 logs ludora-api-staging",
    "pm2:logs:prod": "pm2 logs ludora-api-prod",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete ludora-api-dev",
    "pm2:delete:all": "pm2 delete all",
    "pm2:monit": "pm2 monit",
    "pm2:flush": "pm2 flush",
    "pm2:reload": "pm2 reload ludora-api-dev",
    "pm2:reload:staging": "pm2 reload ludora-api-staging",
    "pm2:reload:prod": "pm2 reload ludora-api-prod",
    "logs:prod": "flyctl logs -a ludora-api",
    "logs:clean": "truncate -s 0 logs/pm2-*.log",
    "logs:backup": "mkdir -p logs/backup-$(date +%Y%m%d-%H%M) && cp logs/*.log logs/backup-$(date +%Y%m%d-%H%M)/",
    "logs:size": "du -sh logs/ && ls -lah logs/",
    "logs:tail": "tail -f logs/pm2-combined-0.log",
    "logs:tail:error": "tail -f logs/pm2-error-0.log",
    "logs:view:recent": "tail -n 100 logs/pm2-combined-0.log",
    "logs:view:errors": "grep -i error logs/pm2-combined-0.log | tail -20",
    "logs:rotate": "pm2 reloadLogs",
    "logs:logrotate:config": "pm2 conf pm2-logrotate",
    "logs:logrotate:force": "pm2 trigger pm2-logrotate rotate",
    "maintenance:health": "curl -s http://localhost:3003/health | jq .",
    "maintenance:status": "npm run pm2:status && echo '\n--- Log Sizes ---' && npm run logs:size",
    "maintenance:cleanup": "npm run logs:backup && npm run logs:clean && pm2 flush && echo 'Maintenance cleanup completed'",
    "schema:check": "echo 'Use db:test to verify database schema'",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:fix-migration-meta": "node scripts/fix-migration-meta.js"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "fontkit": "^2.0.4",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sharp": "^0.34.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "supertest": "^6.3.4"
  }
}
